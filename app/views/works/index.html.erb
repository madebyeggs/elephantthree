<div class="flex-list" style="margin-top:60px;margin-bottom:60px;">
	<div class="iframe">
		<% if @first_work.platform == "vimeo" %>
			<iframe name="ifrm" id="ifrm" src="https://player.vimeo.com/video/<%= @first_work.vimeo %>" 
			frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
		<% else %>
			<iframe name="ifrm" id="ifrm" src="https://www.youtube.com/embed/<%= @first_work.vimeo %>" 
			frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
		<% end %>
	</div>
	
	<ul class="flex-list" style="margin:60px 20px 0px -20px;font-size:14px;">
		<% @works.each do |work| %>
			<% if work.platform == "vimeo" %>
		    	<li><a href="https://player.vimeo.com/video/<%= work.vimeo %>" onclick="return loadIframe('ifrm', this.href);"><%= work.brand_name.strip %></a></li>
			<% else %>
				<li><a href="https://www.youtube.com/embed/<%= work.vimeo %>" onclick="return loadIframe('ifrm', this.href);"><%= work.brand_name.strip %></a></li>
			<% end %>
		<% end %>
	</ul>
</div>