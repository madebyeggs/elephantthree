<body class="">
    <div class="offcanvas__container offcanvas--trigger">
    	<nav id="nav" class="navbar navbar-default navbar-absolute-top navbar-fixed-top" role="navigation" style="top: 0px;">
   			<div class="visible-md visible-lg">
        		<%= link_to("Logo", root_path, class: "navbar-header") %>
        	 	<div id="navbar" class="navbar-collapse collapse">
            		<ul class="nav navbar-nav">
					</ul>
					<% if user_signed_in? %>
        				<div class="navbar-right">
        					<ul class="nav navbar-nav navbar-login">
                				<li class="paddmysides"><span>Logged in as </span><br/><%= current_user.email %><br/>
								<%#= link_to 'Edit', edit_user_registration_path %>
								<%#= link_to 'Logout', destroy_user_session_path %></li>
                				<li><%= link_to("Logout", destroy_user_session_path, class: "btn btn-default") %></li>
            				</ul>
   	 					</div>
					<% end %>
        		</div>
    		</div>
			<div class="visible-xxs visible-xs visible-sm">
        		<div class="navbar navbar-default " role="navigation">
            		<button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".navbar-collapse">
						<span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span> 
					</button>
					<a href="" title="Home" class="navbar-header">LOGO HERE</a>
        		</div>
    		</div>
		</nav>
		<div class="col-xs-6 col-sm-3 sidebar-offcanvas navbar-collapse offcanvas--showhide" id="sidebar" role="navigation">
    		<div class="visible-xxs visible-xs visible-sm">
        		<div class="row">
            		<div class="sidebar-nav">
               		<a href="" title="Home" class="navbar-header">LOGO HERE</a>
            		<ul class="nav navbar-nav">
            		</ul>
            	</div>
         	</div>
    	</div>
	</div>
	<div class="offcanvas--pusher-container">
		<div class="offcanvas--pusher">
	    	<div id="home_page">
	    		<article role="main">
					<section class="news__container">
	    				<div class="container-fluid">
	       					<div class="row">
	              			  	<div class="col-xxs-10 col-xxs-push-1 col-sm-12 col-sm-push-0">
	      							<figure class="new__item news__item--push-down">
	                					<%= yield %>
	            				  	</figure>
	    						</div>
	          			  	</div>
	            	  	</div>
					</section>
				</article>
			</div>
		</div>
		<%= render 'layouts/footer' %>
	</div>
	<%= javascript_include_tag 'footer', 'data-turbolinks-track' => true %>
</body>