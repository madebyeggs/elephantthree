@font-face {
  font-family: 'SplitCustomGotham';
  src:font-url('Gotham-ExtraLight.eot');
  src:font-url('Gotham-ExtraLight.eot?#iefix') format('embedded-opentype'),
    font-url('Gotham-ExtraLight.svg#icomoon') format('svg'),
    font-url('Gotham-ExtraLight.woff') format('woff'),
    font-url('Gotham-ExtraLight.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

html { 
  background: image-url('holding.png') no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.text {
	font-family:"SplitCustomGotham";
	font-size:1.2em;
	color:white;
	text-align:center;
	position:absolute;
	margin-left: auto;
	margin-right: auto;
	left: 0;
	right: 0;
	bottom:10%;
}

.text a, .text a:hover, .text a:visited {text-decoration:none;color:white;}

@media only screen and (max-width: 960px) {
    .text {font-size:0.7em;}
}